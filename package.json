{
  "name": "trustgrid-ai",
  "version": "1.0.0",
  "description": "Onchain AI-powered trust & risk scoring infrastructure for Web3",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend && npm run test:contracts",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:contracts": "cd contracts && npm test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "setup": "./scripts/setup_local.sh",
    "deploy": "./scripts/deploy_contracts.sh",
    "demo": "./scripts/run_demo.sh"
  },
  "keywords": [
    "web3",
    "arbitrum",
    "trust-scoring",
    "ai",
    "blockchain",
    "defi",
    "oracle"
  ],
  "author": "TrustGrid.AI Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/react": "19.1.12",
    "@types/react-dom": "19.1.9",
    "@types/node": "24.3.1",
    "tailwindcss": "4.1.13",
    "typescript": "5.9.2",
    "postcss": "8.5.6"
  },
  "workspaces": [
    "backend",
    "frontend",
    "contracts"
  ],
  "dependencies": {
    "hardhat": "3.0.4",
    "@nomicfoundation/hardhat-toolbox": "6.1.0",
    "@nomicfoundation/hardhat-verify": "3.0.1",
    "dotenv": "17.2.2",
    "next": "15.5.2",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react": "0.542.0",
    "tailwind-merge": "3.3.1",
    "tailwindcss-animate": "1.0.7",
    "chai": "6.0.1",
    "@nomicfoundation/hardhat-ethers": "4.0.0",
    "express": "5.1.0",
    "cors": "2.8.5",
    "helmet": "8.1.0",
    "reflect-metadata": "0.2.2",
    "typeorm": "0.3.26",
    "ethers": "6.15.0",
    "express-validator": "7.2.1",
    "winston": "3.17.0",
    "supertest": "7.1.4"
  }
}
